<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Disable all logging from password4j and its dependencies -->
    <logger name="com.password4j" level="OFF" />
    <logger name="org.bouncycastle" level="OFF" />

    <!-- Set the root logger to only log ERRORs -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

</configuration>
